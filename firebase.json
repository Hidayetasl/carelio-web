{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/uye-girisi",
        "destination": "/auth",
        "type": 302
      },
      {
        "source": "/uye-giris",
        "destination": "/auth",
        "type": 302
      },
      {
        "source": "/giris",
        "destination": "/auth",
        "type": 302
      },
      {
        "source": "/login",
        "destination": "/auth",
        "type": 302
      },
      {
        "source": "/favicon.ico",
        "destination": "/favicon.svg",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/auth",
        "destination": "/auth/index.html"
      },
      {
        "source": "/auth/**",
        "destination": "/auth/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}